@media screen and (max-width: 500px){
    #wrapper{
        width:100%;
        overflow-x:hidden;
    }
}
@media screen and (min-width: 900px){
    .posts .row{
        width:80%;
        margin-right:auto;
        margin-left:auto;
    }
}

.form-inline > *{
  margin-right: 2em;

}

input[name*="site_setting"]{
  margin-right: 1em;
  margin-left: 1em;
}

input[name*="album"]{
  margin-right: 1em;
  margin-left: 1em;
}


li a img {
  margin-top:-10px;
}



