doctype html
html
    head
         title = "Sunrise Reset | #{action_name.titlecase}" 
         meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"
         - if current_page?(action:'hear', controller:'/pages')
            = stylesheet_link_tag 'jplayer.pink.flag.min.css'
         - if current_page?(action:'see', controller:'/pages')
        
         = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
         = javascript_include_tag 'application', 'data-turbolinks-track' => true 
         meta name="description" content = "Official site of Sunrise Reset, an indie band from Columbus, Ohio"
         
 		 = csrf_meta_tags 
    css:
      h2, #big_text, h3, h4, h1, h5, #main-nav a, #main-nav i, #main-nav .fa-bars{
     color: #{@header_text_color};
      }
     body{background-color:#{@background_color};}
      p {
       color: #{@body_text_color};
      } 

      a {
        color: #{@link_color};
      }

      label {
        color: #{@body_text_color};
      }

      .btn {
        background-color: #{@main_color};
      }
     

      .btn a:hover{

      }  

      .caption span{
      color: #{@body_text_color};
      font-size: 16px !important;
      }

    
      #main-nav{
        background:transparent;

      }

      .icon-sunriselogo{
      width:100%;
      height: 100%;
      margin:0;
      }
       .icon-sunriselogo:before{
          content: "\e900";
          font-family: 'icomoon';
          speak: none;
          font-size:4em;
          color: #{@main_color} !important;
          
          
      }
          
        
      .icon-logo{

        padding:0;
        

      } 

      .icon-logo a {
        padding: 0 !important;
        margin-right: -3px;
        margin-top: 20px;
      }
  

      .song_kick{
        background-color: rgba(0,0,0,0.32);
      }

       #main-nav li a:hover,  a:hover,  i:hover{
        color: #{@main_color};
      }
       
       #main-nav li a{
        color: #{@link_color};
       }
   
      
      .featured_links {
        width: 100%;
        margin:5px;
        padding:5px;
        text-align: center;
      }

      
      .featured_links a {
         background-color:transparent;
         border:none;
        text-align:center;
        width:100%;
        padding: 0px;
          
        }    

      
      
  

      .control-group .fa-2x {
        font-size: 0.95em !important;

      }

      #bio p {
       width:75%;
       font-size:1.2em;
       color: #{@body_text_color}
       height:100%;
       margin-bottom:0;

      }

      #bio{
      height:100%;

      }

      #bio .btn.btn-default{
        width: 75%;
        background-color:#{@main_color};
        color: #{@link_color};
        margin-top: 10px;
        font-family: 'Open Sans Condensed', sans-serif;
        letter-spacing: 2px;
       

      }



      #bio p{
       width: 75%;
       margin-left: auto;
       margin-right: auto;
      }
      .band-band{
        margin-top: 50px;
        margin-bottom: 50px;
      }

     #band{
      text-align:center;
     }
     #band * {
     width: 75%;
     margin: 0 auto;
     
     }


     #band .thumbnail{
      height:100%;
      background-color: #{@background_color};
      
     }

     #band .thumbnail img{
      width: 100%;
      height: 100%;
      padding:0;
     }

     

     @media screen and (min-width:900px){
      .row {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: -moz-box;
        display: flex;

      }
      .row > [class*='col-'] {
        display: flex;
        display: -moz-box;
        flex-direction: column;
         flex-wrap: wrap;
        min-width:0;
        min-height:0;
      }
      }


        #main-nav li a:hover, #main-nav li i:hover{
          background-color:transparent;
          color: #{@main_color};
            
        }

           
       @media screen and (min-width: 900px){
        #main-nav{
          margin-left:10%;
        }

      #main-nav li {


         margin-left:0;
         padding:0;
        }

          }

  
       footer {
         
          text-align:center; 
          background-color: #{@main_color};
          padding-bottom:10px;
          padding-top:10px;
          }
          
         footer h2 {
             border-top:solid 2px;
            color:#{@header_text_color};
             padding-top:10px;
             padding-bottom:20px;
         }
            
          footer ul {
            list-style-type:none;

            }

            footer ul li{
            display: inline;
            width: 150px;
            }

      .featured_links a h2{
        padding: 5px; 
        margin:5px;
         background-color: #{@background_color};

      }

      .center-logo{
        position:absolute;
        top:0;
        left:0;
        width:100%;
        text-align:center;
      }

      .center-logo .icon-sunriselogo:before{
        font-size: 6em;
      }


     
    body 
     .wrapper
         div id='header'
          = render 'layouts/header'
         div id='body'
		      == yield
         